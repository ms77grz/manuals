#!/bin/bash
echo one two three four five | awk '{print $3,$4}'

awk '/^st/' /etc/group
awk '/magax/' /etc/group

awk -F: '{print $1}' /etc/group | head -4

awk -F: '{$3 > 1000}' /etc/group

awk '! /:$/' /etc/group

awk '/NAT/' VBox.log.3


